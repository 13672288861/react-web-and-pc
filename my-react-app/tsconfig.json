{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": [
    "apps/**/src",
    "apps/**/src/**/*.ts",
    "apps/**/src/**/*.d.ts",
    "apps/common/types/*.d.ts",
    "apps/**/src/**/*.tsx",
    "apps/**/**/*.tsx",
    "apps/**/**/*.ts",
    "./auto-imports.d.ts",
    "postcss.config.cjs",
    "prettier.config.js"
, "apps/GuideJdWebApp/views/abandon-signature/canvas.js"  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
